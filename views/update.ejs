<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>


<header>
        <div class="container">
            <div id="branding">
                <h4> <span class="highlight">Suppliers </span>Accounts</h4>
            
            </div>
        </div>
    </header>

    <% include ./navmenu %>

    
<body>
 
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Update Lagos </h1>

        
        <% if ( success_messages !='' ) { %>
            <div class="alert alert-success" >
                <strong><%= success_messages %> </strong>
            </div>
            <% } %>

        <% if ( error != '' ) { %>
                <div class="alert alert-success" >
                    <strong><%= error %> </strong>
                </div>
        <% } %>

        <form action="/update" method="POST">
          <div class="form-group">
            <label for="email">Date</label>
            <input
              type="date"
              id="date"
              name="date"
              class="form-control"
              placeholder="Enter Date"
            />
          </div>
          <div class="form-group">
            <label for="password">Amount Owned</label>
            <input
            name = "owned" value="<%= data.owned %>" id = "owned" type="text" AutoPostBack="true" runat="server" onkeyup="substract()"
              class="form-control"
              placeholder="Amount Owned"
            />
          </div>

          <div class="form-group">
            <label for="password">Last Payment</label>
            <input
              name = "paidb" value="<%= tot %>"  id = "paidb" type="text" AutoPostBack="true" runat="server" onkeyup="substract()" 
              class="form-control"
              placeholder="Last Payment"
            />
          </div>

          
          <div class="form-group">
            <label for="password">Amount Paying Now</label>
            <input
            name = "paidn" placeholder="Enter Paying Now" id = "paidn" type="text" AutoPostBack="true" runat="server" onkeyup="substract()" 
              class="form-control"
         
            />
          </div>

          <div class="form-group">
            <label for="password">Amount Remaining</label>
            <input
             name = "remain" value = "<%= data.remain %>" placeholder="Amount Remaining" id = "remain" type="text" AutoPostBack="true" runat="server" onkeyup="substract()"
              class="form-control"
            />
          </div>

          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    function substract() {
        var owned =parseInt(document.getElementById("owned").value);
        var paidb = parseInt(document.getElementById("paidb").value);
        var paidn = parseInt(document.getElementById("paidn").value);
        var result = (owned - (paidb + paidn));
        
        
        
            document.getElementById("remain").value = result;
       

    }
</script>


</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>


<header>
        <div class="container">
            <div id="branding">
                <h4> <span class="highlight">Suppliers </span>Accounts</h4>
            
            </div>
            <nav>
                <ul>
                        <li><a href = "/get">Home</a></li>
                        <li><a href = "/laget">Lagos Report</a></li>
                        <li><a href = "/get">Balance Report</a></li>
                        <li><a href = "/abalance">Add Balance</a></li>
                        <li  class ="current" ><a href = "/ubalance">Remove Balance</a></li>
                        <li><a href = "/insert">Add Lagos </a></li>
                        <li><a href = "/update">Update Lagos </a></li>
                </ul>
              
            </nav>
        </div>
    </header>

    
<body>
        
    <div class="container">


            
        <form id="contact" action="/ubalance" method="POST" >

            <% if ( success_messages !='' ) { %>
                <div class="alert alert-success" >
                    <strong><%= success_messages %> </strong>
                </div>
                <% } %>

            <% if ( error != '' ) { %>
                    <div class="alert alert-success" >
                        <strong><%= error %> </strong>
                    </div>
            <% } %>
          <h4>Remove From Balance</h4>
          
          <fieldset><h3> Date</h3> <input name = "date"  placeholder="Date" type="date" /></fieldset>
          <fieldset> <h3> Total Balance </h3> <input name = "tbalance" value="<%= data.balance %>" placeholder="Address" id = "tbalance" type="text" AutoPostBack="true" runat="server" onkeyup="substract()" /></fieldset>
          <fieldset>  <h3>Amount Removing</h3> <input name = "removes"  placeholder="Amount Paid Before" id = "removes" type="text" AutoPostBack="true" runat="server" onkeyup="substract()"  /></fieldset>
          <fieldset>   <h3>New Total Balance</h3> <input name = "nbalance" placeholder="Enter Paying Now" id = "nbalance" type="text" AutoPostBack="true" runat="server" onkeyup="substract()"  /></fieldset>
          
         
          <button type="submit" class="btn">Submit</button>
        </form>
  </div> 

  <script>
    function substract() {
        var tbalance =parseInt(document.getElementById("tbalance").value);
        var removes = parseInt(document.getElementById("removes").value);
        var result = tbalance - removes;
        
        
        
            document.getElementById("nbalance").value = result;
       

    }
</script>
</body>
</html>